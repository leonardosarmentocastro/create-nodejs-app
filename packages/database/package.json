  },
  "keywords": [
    "database",
    "connect",
    "mongodb"
  ],
  "author": "leonardosarmentocastro",
  "license": "ISC",
  "dependencies": {
    "async-retry": "^1.3.1"
  },
  "devDependencies": {
    "ava": "^3.15.0",
    "mongoose": "^5.12.7"
  },
  "peerDependencies": {
    "mongoose": "^5.12.7"
  }
}
